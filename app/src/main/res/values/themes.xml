<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SegarBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_green</item>
        <!-- Full Background -->
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/grey</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_green</item>
        <!-- Toolbar -->
        <item name="colorSecondaryVariant">@color/greyFake</item>
        <item name="colorOnSecondary">@color/brown_med</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="poppinsExtraBold">
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="poppinsMedium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="onWhite">
        <item name="android:color">@color/white</item>
    </style>

</resources>